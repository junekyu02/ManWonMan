<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 상단 타이틀 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="뒤로가기 버튼"
                android:src="@drawable/arrow_back" />

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="홍길동님이 등록한 물품"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 사용자 정보 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <!-- 사용자 프로필 -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/chat_user_icon"
                android:contentDescription="프로필 이미지"
                android:background="@drawable/circle_background"
                android:padding="8dp" />

            <!-- 사용자 이름 -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="홍길동"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 물품 이미지 -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:src="@drawable/sample_image" />

        <!-- 상세 설명 -->
        <TextView
            android:id="@+id/user_writedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:text="상세 설명이 이곳에 표시됩니다."
            android:textSize="14sp"
            android:textColor="#000000"
            android:elevation="4dp" />

        <!-- 채팅 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/chatting_buttonimage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="채팅 버튼"
                android:src="@drawable/chatting_button"
                android:elevation="8dp" />
        </LinearLayout>

        <!-- Fragment Container -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
