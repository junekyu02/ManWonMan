<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/item_cafe_dessert_background">

    <!-- 태그 영역 (왼쪽 상단) -->
    <TextView
        android:id="@+id/gift_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gift_tag_background"
        android:padding="12dp"
        android:text="커피"
        android:textSize="16sp"

        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 제목 (태그 아래 왼쪽에 배치) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커피 마실 사람~"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gift_tag"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 상세 내용 보기 (제목 아래 왼쪽에 배치) -->
    <TextView
        android:id="@+id/gift_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세내용 더보기"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 이미지 (오른쪽 끝에 배치) -->
    <ImageView
        android:id="@+id/gift_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/sample_image"
        android:contentDescription="음료 이미지"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 교환하기 텍스트와 버튼을 포함한 LinearLayout (오른쪽 아래) -->
    <LinearLayout
        android:id="@+id/gift_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="286dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/gift_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 교환하기 버튼 (아이콘을 포함한 버튼) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교환하기"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/gift_exchange_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/participant_off" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>