<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- 상단 사용자 정보 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/regist_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="뒤로가기 버튼" /> <!-- 추가: 접근성 설명 -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chat_user_icon"
            android:background="@drawable/circle_background"
            android:contentDescription="프로필 이미지" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:text="홍길동"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 알림 메시지 -->
    <TextView
        android:id="@+id/textViewNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#EFEFEF"
        android:text="채팅 전, 이용 수칙을 꼭 읽어주세요!\n서로서로 바르고 고운말로 소통해주세요."
        android:textColor="#FF0000"
        android:textSize="14sp" />

    <!-- 채팅 메시지 영역 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:background="#FFFFFF" />

    <!-- 입력 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F2F2F2">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="메시지 보내기"
            android:background="@drawable/rounded_edit_text_chat"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/chat_icon"
            android:contentDescription="메시지 보내기" />
    </LinearLayout>
</LinearLayout>
