<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/regist_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/regist_back_button" />


    <LinearLayout
        android:id="@+id/regist_search"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:padding="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/regist_back_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="  원하는 유형의 항목을 선택해주세요  "
            android:textSize="22sp"
            android:textColor="@color/white"
            android:background="@drawable/regist_item_category_rounded"/>

    </LinearLayout>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 유형"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/regist_search" />


    <LinearLayout
        android:id="@+id/horizontal_frame"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/category_title"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#757575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_below="@id/horizontal_frame">

        <LinearLayout
            android:id="@+id/category_buttons_layout"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/category_item_button1_off"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/category_item_button1_off"
                android:background="@drawable/item_category_imagerounded"/>

            <ImageButton
                android:id="@+id/category_item_button2_off"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/category_item_button2_off"
                android:background="@drawable/item_category_imagerounded"/>

            <ImageButton
                android:id="@+id/category_item_button3_off"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/category_item_button3_off"
                android:background="@drawable/item_category_imagerounded"/>

            <ImageButton
                android:id="@+id/category_item_button4_off"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/category_item_button4_off"
                android:background="@drawable/item_category_imagerounded"/>

            <ImageButton
                android:id="@+id/category_item_button5_off"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/category_item_button5_off"
                android:background="@drawable/item_category_imagerounded"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="500dp"
            android:layout_toEndOf="@id/category_buttons_layout"
            android:layout_alignTop="@id/category_buttons_layout"
            android:background="#757575" />

        <FrameLayout
            android:id="@+id/category_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/category_buttons_layout"
            android:layout_below="@id/category_buttons_layout"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>