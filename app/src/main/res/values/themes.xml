<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ManWon" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="android:statusBarColor">@color/red</item>
    </style>

    <style name="Theme.ManWon" parent="Base.Theme.ManWon" />

    <!-- Splash 테마 (아이콘 안보이게끔 하기 위함) -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ManWon</item>
    </style>

    <!-- BottomSheetDialog 테마 -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- 커스터마이징 요소 -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- 배경색을 흰색으로 설정 -->
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
